<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="64dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icandtitle_title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/entity_none"
        android:textColor="@color/colorTextDefault"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icandtitle_content"
        android:layout_below="@id/icandtitle_title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/entity_none"
        android:textSize="12sp"/>
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/icandtitle_icon"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"/>
</RelativeLayout>