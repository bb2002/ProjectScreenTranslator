<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/colorPrimary">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/vf_navigation_profile_icon"
            android:src="@drawable/ic_simple_exit"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vf_navigation_welcome"
            android:text="@string/common_hello"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:layout_toEndOf="@id/vf_navigation_profile_icon"
            android:layout_alignTop="@id/vf_navigation_profile_icon"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vf_navigation_email"
            android:text="@string/entity_none"
            android:layout_below="@id/vf_navigation_welcome"
            android:layout_toEndOf="@id/vf_navigation_profile_icon"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>
</LinearLayout>